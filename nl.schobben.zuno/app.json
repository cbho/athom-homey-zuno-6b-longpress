        "en": "ZUNO Arduino Board"
      },
      "zwave": {
        "manufacturerId": 277,
        "productTypeId": 272,
        "productId": 1,
        "learnmode": {
          "image": "/drivers/ZUNO/assets/learnmode.svg",
          "instruction": {
            "en": "Press the button on your ZUNO three times",
            "nl": "Druk driemaal op de knop op de ZUNO"
          }
