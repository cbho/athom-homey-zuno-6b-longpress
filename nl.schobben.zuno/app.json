            "id": "icon",
            "capabilities": []
          },
          {
            "id": "sensor",
            "capabilities": [
              "alarm_generic.contact1"
            ],
            "options": {
              "icons": {
                "alarm_generic.contact1": "/drivers/ZUNO/assets/switch.svg"
              },
              "alarm_generic.contact1": {
                "noblink": true,
                "label": {
                  "true": {
                    "en": "Open",
                    "nl": "Open"
                  },
                  "false": {
                    "en": "Closed",
                    "nl": "Gesloten"
                  }
                }
              }
            }
          }
        ]
